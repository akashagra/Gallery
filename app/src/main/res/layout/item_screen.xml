<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@drawable/image_one"
        android:id="@+id/peek_first"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:src="@drawable/image_two"
        android:id="@+id/peek_second"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toEndOf="@id/peek_first"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:src="@drawable/image_three"
        android:id="@+id/peek_third"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/peek_first"/>

    <ImageView
        android:id="@+id/peek_fourth"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toEndOf="@id/peek_third"
        app:layout_constraintTop_toBottomOf="@id/peek_first"/>

</android.support.constraint.ConstraintLayout>